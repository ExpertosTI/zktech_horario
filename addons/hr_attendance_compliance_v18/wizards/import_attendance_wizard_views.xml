<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista del Wizard de Importación de Asistencia -->
    <record id="view_import_attendance_wizard_form" model="ir.ui.view">
        <field name="name">import.attendance.wizard.form</field>
        <field name="model">import.attendance.wizard</field>
        <field name="arch" type="xml">
            <form string="Importar Asistencia" create="false" edit="false">
                <sheet>
                    <group>
                        <field name="file_data" filename="file_name"/>
                        <field name="file_name" readonly="1"/>
                        <field name="file_type" readonly="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Importar" name="action_import" type="object" class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción del Wizard -->
    <record id="action_import_attendance_wizard" model="ir.actions.act_window">
        <field name="name">Importar Asistencia</field>
        <field name="res_model">import.attendance.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_import_attendance_wizard_form"/>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>
</odoo>