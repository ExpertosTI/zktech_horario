<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista List para Registros de Asistencia -->
    <record id="view_attendance_report_tree" model="ir.ui.view">
        <field name="name">hr.attendance.report.tree</field>
        <field name="model">hr.attendance.report</field>
        <field name="arch" type="xml">
            <list string="Registros de Asistencia" decoration-danger="status=='absent'" decoration-warning="status=='late'" decoration-success="status=='on_time'">
                <field name="employee_id"/>
                <field name="date"/>
                <field name="day_of_week"/>
                <field name="attended"/>
                <field name="first_entry"/>
                <field name="last_exit"/>
                <field name="official_entry_time"/>
                <field name="late_minutes"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- Vista Kanban para Registros de Asistencia (diarios) -->
    <record id="view_attendance_report_kanban" model="ir.ui.view">
        <field name="name">hr.attendance.report.kanban</field>
        <field name="model">hr.attendance.report</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="employee_id" create="false">
                <field name="employee_id"/>
                <field name="date"/>
                <field name="day_of_week"/>
                <field name="attended"/>
                <field name="first_entry"/>
                <field name="last_exit"/>
                <field name="official_entry_time"/>
                <field name="late_minutes"/>
                <field name="status"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="attendance-card">
                            <div class="day-card" t-att-class="record.status.raw_value">
                                <div class="day-header">
                                    <div>
                                        <span class="day-title"><t t-esc="record.day_of_week.value"/> • <t t-esc="record.date.value"/></span>
                                    </div>
                                    <div>
                                        <span class="badge" t-att-class="record.status.raw_value">
                                            <t t-if="record.status.raw_value == 'on_time'">Presente</t>
                                            <t t-if="record.status.raw_value == 'late'">Retrasado</t>
                                            <t t-if="record.status.raw_value == 'absent'">Ausente</t>
                                        </span>
                                        <button type="object" name="action_open_edit_schedule" class="btn btn-outline-primary btn-sm">Editar horario</button>
                                    </div>
                                </div>
                                <div class="timestamps">
                                    <div class="timestamp"><i class="fa fa-sign-in-alt"/> Entrada: <t t-esc="record.first_entry.value or '-'"/></div>
                                    <div class="timestamp"><i class="fa fa-sign-out-alt"/> Salida: <t t-esc="record.last_exit.value or '-'"/></div>
                                    <div class="timestamp"><i class="fa fa-clock"/> Oficial: <t t-esc="record.official_entry_time.value or '-'"/></div>
                                    <div class="timestamp"><i class="fa fa-hourglass-half"/> Retraso: <t t-esc="record.late_minutes.value"/> min</div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista Form para Registros de Asistencia -->
    <record id="view_attendance_report_form" model="ir.ui.view">
        <field name="name">hr.attendance.report.form</field>
        <field name="model">hr.attendance.report</field>
        <field name="arch" type="xml">
            <form string="Registro de Asistencia">
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="date"/>
                            <field name="day_of_week"/>
                            <field name="attended"/>
                        </group>
                        <group>
                            <field name="first_entry"/>
                            <field name="last_exit"/>
                            <field name="official_entry_time"/>
                            <field name="total_records"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="late_minutes"/>
                            <field name="early_exit_minutes"/>
                        </group>
                        <group>
                            <field name="status"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Search para Registros de Asistencia -->
    <record id="view_attendance_report_search" model="ir.ui.view">
        <field name="name">hr.attendance.report.search</field>
        <field name="model">hr.attendance.report</field>
        <field name="arch" type="xml">
            <search string="Buscar Asistencia">
                <field name="employee_id"/>
                <field name="date"/>
                <field name="company_id"/>
                <filter string="Asistió" name="attended" domain="[('attended','=',True)]"/>
                <filter string="Ausente" name="absent" domain="[('attended','=',False)]"/>
                <filter string="Retrasado" name="late" domain="[('status','=','late')]"/>
                <filter string="A Tiempo" name="on_time" domain="[('status','=','on_time')]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Empleado" name="group_employee" context="{'group_by':'employee_id'}"/>
                    <filter string="Fecha" name="group_date" context="{'group_by':'date'}"/>
                    <filter string="Estado" name="group_status" context="{'group_by':'status'}"/>
                    <filter string="Compañía" name="group_company" context="{'group_by':'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vista Kanban para Resumen de Asistencia -->
    <record id="view_attendance_report_summary_kanban" model="ir.ui.view">
        <field name="name">hr.attendance.report.summary.kanban</field>
        <field name="model">hr.attendance.report.summary</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" decoration-danger="status=='critical'" decoration-warning="status=='warning'" decoration-success="status=='ok'">
                <field name="employee_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="total_days"/>
                <field name="attended_days"/>
                <field name="absences"/>
                <field name="avg_late_minutes"/>
                <field name="verdict_text"/>
                <field name="status"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click attendance-card" t-att-class="record.status.raw_value">
                            <div class="attendance-header">
                                <strong class="attendance-name">
                                    <button type="object" name="action_open_daily_detail" class="btn btn-link p-0" t-att-style="'text-decoration: none; cursor: pointer;'">
                                        <field name="employee_id"/>
                                    </button>
                                </strong>
                                <div>
                                    <span class="attendance-period">
                                        <t t-esc="record.date_from.value"/> - <t t-esc="record.date_to.value"/>
                                    </span>
                                    <button type="object" name="action_open_edit_schedule" class="btn btn-outline-primary btn-sm">Editar horario</button>
                                </div>
                            </div>
                            <div class="stats-grid">
                                <div class="stat-box">
                                    <div class="stat-value"><t t-esc="record.attended_days.value"/>/<t t-esc="record.total_days.value"/></div>
                                    <div class="stat-label">Asistidos</div>
                                </div>
                                <div class="stat-box">
                                    <div class="stat-value"><t t-esc="record.absences.value"/></div>
                                    <div class="stat-label">Faltas</div>
                                </div>
                            </div>
                            <div>
                                <span class="verdict-pill" t-att-class="'verdict-' + record.status.raw_value">
                                    <t t-esc="record.verdict_text.value"/>
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista List para Resumen de Asistencia -->
    <record id="view_attendance_report_summary_tree" model="ir.ui.view">
        <field name="name">hr.attendance.report.summary.tree</field>
        <field name="model">hr.attendance.report.summary</field>
        <field name="arch" type="xml">
            <list string="Resumen de Asistencia" decoration-danger="status=='critical'" decoration-warning="status=='warning'" decoration-success="status=='ok'">
                <field name="employee_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="total_days"/>
                <field name="attended_days"/>
                <field name="absences"/>
                <field name="avg_late_minutes"/>
                <field name="verdict_text"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- Vista Form para Resumen de Asistencia -->
    <record id="view_attendance_report_summary_form" model="ir.ui.view">
        <field name="name">hr.attendance.report.summary.form</field>
        <field name="model">hr.attendance.report.summary</field>
        <field name="arch" type="xml">
            <form string="Resumen de Asistencia">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="employee_id"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Periodo">
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group string="Estado">
                            <field name="verdict_text"/>
                            <field name="status"/>
                        </group>
                    </group>
                    <group>
                        <group string="Asistencia">
                            <field name="total_days"/>
                            <field name="attended_days"/>
                            <field name="absences"/>
                        </group>
                        <group string="Retrasos y Salidas">
                            <field name="total_late_minutes"/>
                            <field name="avg_late_minutes"/>
                            <field name="total_early_minutes"/>
                            <field name="avg_early_minutes"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Search para Resumen de Asistencia -->
    <record id="view_attendance_report_summary_search" model="ir.ui.view">
        <field name="name">hr.attendance.report.summary.search</field>
        <field name="model">hr.attendance.report.summary</field>
        <field name="arch" type="xml">
            <search string="Buscar Resumen">
                <field name="employee_id"/>
                <field name="company_id"/>
                <filter string="Crítico" name="critical" domain="[('status','=','critical')]"/>
                <filter string="Advertencia" name="warning" domain="[('status','=','warning')]"/>
                <filter string="Cumple" name="ok" domain="[('status','=','ok')]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Estado" name="group_status" context="{'group_by':'status'}"/>
                    <filter string="Veredicto" name="group_verdict" context="{'group_by':'verdict_type'}"/>
                    <filter string="Compañía" name="group_company" context="{'group_by':'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acciones -->
    <record id="action_attendance_report" model="ir.actions.act_window">
        <field name="name">Registros de Asistencia</field>
        <field name="res_model">hr.attendance.report</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay registros de asistencia
            </p>
            <p>
                Importe un archivo CSV o Excel para comenzar.
            </p>
        </field>
    </record>

    <record id="action_attendance_report_summary" model="ir.actions.act_window">
        <field name="name">Resumen de Cumplimiento</field>
        <field name="res_model">hr.attendance.report.summary</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay resúmenes de asistencia
            </p>
            <p>
                Los resúmenes se generan automáticamente al importar datos.
            </p>
        </field>
    </record>
</odoo>