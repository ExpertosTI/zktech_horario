<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista List para Horarios -->
    <record id="view_attendance_schedule_tree" model="ir.ui.view">
        <field name="name">hr.attendance.schedule.tree</field>
        <field name="model">hr.attendance.schedule</field>
        <field name="arch" type="xml">
            <list string="Horarios Personalizados" editable="bottom">
                <field name="employee_id"/>
                <field name="day_of_week"/>
                <field name="official_entry_time"/>
                <field name="day_off"/>
            </list>
        </field>
    </record>

    <!-- Vista Form para Horarios -->
    <record id="view_attendance_schedule_form" model="ir.ui.view">
        <field name="name">hr.attendance.schedule.form</field>
        <field name="model">hr.attendance.schedule</field>
        <field name="arch" type="xml">
            <form string="Horario Personalizado">
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="day_of_week"/>
                        </group>
                        <group>
                            <field name="official_entry_time"/>
                            <field name="day_off"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Search para Horarios -->
    <record id="view_attendance_schedule_search" model="ir.ui.view">
        <field name="name">hr.attendance.schedule.search</field>
        <field name="model">hr.attendance.schedule</field>
        <field name="arch" type="xml">
            <search string="Buscar Horarios">
                <field name="employee_id"/>
                <field name="day_of_week"/>
                <field name="company_id"/>
                <filter string="Días Libres" name="day_off" domain="[('day_off','=',True)]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Empleado" name="group_employee" context="{'group_by':'employee_id'}"/>
                    <filter string="Día de la Semana" name="group_day" context="{'group_by':'day_of_week'}"/>
                    <filter string="Compañía" name="group_company" context="{'group_by':'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_attendance_schedule" model="ir.actions.act_window">
        <field name="name">Horarios Personalizados</field>
        <field name="res_model">hr.attendance.schedule</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay horarios personalizados
            </p>
            <p>
                Configure horarios específicos por empleado y día de la semana.
            </p>
        </field>
    </record>
</odoo>